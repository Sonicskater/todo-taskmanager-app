<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/categoryNameText"
        android:text="Name"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="23dp" />

    <EditText
        android:id="@+id/categoryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/buttonCreateCategory"
        app:layout_constraintStart_toEndOf="@+id/buttonCreateCategory"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCreateCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonCancelCreateCategory"
            android:layout_alignBottom="@+id/buttonCancelCreateCategory"
            android:layout_alignStart="@+id/categoryNameText"
            android:layout_weight="1"
            android:text="Add"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="126dp" />

        <Button
            android:id="@+id/buttonCancelCreateCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/categoryNameText"
            android:layout_below="@+id/categoryNameText"
            android:layout_weight="1"
            android:text="Cancel"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="126dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="500dp"
    tools:context="com.describe.taskmanager.DatePickerPopup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDatePickerOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/datePicker"
            android:text="OK"
            android:padding="5dp"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="469dp" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="27dp" />

        <Button
            android:id="@+id/btnDatePickerCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnDatePickerOk"
            android:layout_alignBottom="@+id/btnDatePickerOk"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/btnDatePickerOk"
            android:padding="5dp"
            android:text="Cancel" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

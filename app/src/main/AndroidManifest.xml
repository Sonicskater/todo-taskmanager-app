<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.describe.taskmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="DeSCriBe Task Manager"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EventCreateView"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".CategoryList"
            android:label="@string/title_activity_category_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TaskList" />
        <activity android:name=".DatePickerPopup" />
        <activity android:name=".TimePickerPopup" />
        <activity
            android:name="com.describe.taskmanager.LandingScreen"
            android:label="@string/title_activity_landing_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>